# Snappy Backend - Production Environment Variables Template
# Copy this to .env and fill in your values

# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Get this from Supabase Dashboard -> Settings -> Database -> Connection Pooling
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-YOUR_REGION.pooler.supabase.com:6543/postgres

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-dashboard

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your-secure-random-secret-key-here

# ===========================================
# BACKUP SETTINGS
# ===========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# ===========================================
# APP SETTINGS
# ===========================================
INVOICE_PREFIX=LAW
CURRENCY=INR
DEFAULT_TAX_RATE=18
