# ====================================
# ENVIRONMENT: development / production
# ====================================
ENVIRONMENT=development

# ====================================
# FLASK CONFIGURATION
# ====================================
FLASK_APP=backend/app/main.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-this-in-production-use-strong-random-key

# ====================================
# DATABASE CONFIGURATION
# ====================================
# For Desktop App (offline): SQLite
DATABASE_URL=sqlite:///snappy.db

# For Web App (online): PostgreSQL via Supabase
# Uncomment for production web deployment
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# DuckDB for Analytics
DUCKDB_PATH=snappy_analytics.duckdb

# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ====================================
# API CONFIGURATION
# ====================================
# API Version
API_VERSION=v1

# API Base URL (for frontend to call backend)
# Development (local)
API_BASE_URL=http://localhost:5000/api/v1

# Production Web App (deploy to Railway/Heroku)
# API_BASE_URL=https://api.snappy.app/api/v1

# Desktop App (embedded backend)
# API_BASE_URL=http://localhost:5001/api/v1

# ====================================
# APP SETTINGS
# ====================================
INVOICE_PREFIX=LAW
CURRENCY=INR
DEFAULT_TAX_RATE=18

# ====================================
# SUBSCRIPTION & PRICING (in Rupees)
# ====================================
SUBSCRIPTION_STARTER_MONTHLY=400
SUBSCRIPTION_PRO_MONTHLY=1000
SUBSCRIPTION_ENTERPRISE_MONTHLY=1500

# Annual pricing (with discount)
SUBSCRIPTION_STARTER_YEARLY=4000
SUBSCRIPTION_PRO_YEARLY=10000
SUBSCRIPTION_ENTERPRISE_YEARLY=15000

# Trial period (days)
FREE_TRIAL_DAYS=7

# ====================================
# PAYMENT GATEWAY (RAZORPAY)
# ====================================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ====================================
# CLOUD BACKUP CONFIGURATION
# ====================================
BACKUP_DIR=./backups
AUTO_BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_ENABLED=true

# Supabase Storage Bucket for backups
SUPABASE_BACKUP_BUCKET=user-backups

# ====================================
# LICENSE & PRODUCT KEY
# ====================================
# Offline grace period for desktop app (days)
OFFLINE_GRACE_PERIOD_DAYS=7

# Product key will be generated via separate system
# Users purchase and receive keys via email
# Keys are validated against Supabase database

# ====================================
# DESKTOP APP CONFIGURATION
# ====================================
DESKTOP_APP_VERSION=1.0.0
DESKTOP_BACKEND_PORT=5001
AUTO_UPDATE_CHECK_ENABLED=true
AUTO_UPDATE_FREQUENCY_DAYS=7
AUTO_UPDATE_URL=https://releases.snappy.app/updates.json

# ====================================
# EMAIL CONFIGURATION (Optional)
# ====================================
# For sending product keys, backup notifications, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=SNAPPY <noreply@snappy.app>

# ====================================
# LOGGING & MONITORING
# ====================================
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================================
# CORS CONFIGURATION
# ====================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.snappy.app
